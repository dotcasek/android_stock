<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="bhcc.android.stockapp.SubmitAll">

    <TextView
        android:id="@+id/completed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_sumbit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="@string/bt_sumbit_text"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/button_sumbit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edit_text_style"
        android:text="@string/write_to_file"/>


</RelativeLayout>
